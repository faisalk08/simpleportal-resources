<% if(typeof modelfields == "undefined"){
	modelfields = configuration.modelfields;}-%>
<ol class="breadcrumb">
	<li><%%= getMessage("search") %> &raquo; (<%= title %> )<li>
</ol>
<div class="row">
	<div class="col-sm-12 span12">
		<form id="<%= name %>-form" class="smart-form" action="<%= apiurl %>" method="POST">
			<fieldset>
				<% for( var fieldIndex in modelfields){var modelfield = modelfields[fieldIndex];
					var fieldsetting = modelfield.modelsettings;
					if(configuration && typeof configuration.modelsettings !== 'undefined')
					 	fieldsetting = configuration.modelsettings[modelfield.field];%>
					<% draw_search_input(modelfield, fieldsetting);%>
				<%}-%>
			</fieldset>
			<hr/>
			<footer class="form-actions form-group">
				<button type="button" name="submit" class="save btn btn-primary btn-s" data-target="#<%= name %>_search_results">
					<i class='glyphicon glyphicon-floppy-disk'></i> <%%= getMessage("submit") %>
				</button>
				<a class="export btn btn-primary btn-s" href="<%= apiurl %>/export" download="<%= name %>-search.json">
					<i class='glyphicon glyphicon-download'></i> <%%= getMessage("export") %>
				</a>
				<button type="reset" class="btn btn-default  btn-s clear">
					<i class='glyphicon glyphicon-repeat'></i> <%%= getMessage("clear") %>
				</button>
			</footer>
		</form>
	</div>
</div>
<div id="<%= name %>_search_results" class="search_results"></div>
