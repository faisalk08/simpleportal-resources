<ol class="breadcrumb">
	<li><%%= getMessage("search") %> &raquo; (<%= serviceconfig.modelname %>)<li>
</ol>

<form id="<%= serviceconfig.name %>_search-form" class="smart-form" action="<%= serviceconfig.apiurl %>" method="POST" >
	<fieldset>
		<%for( var fieldIndex in serviceconfig.modelfields){var modelfield = modelfields[fieldIndex];
			var fieldsetting;
			
			if(serviceconfig.configuration && typeof serviceconfig.configuration.modelsettings !== 'undefined')
			 	fieldsetting = configuration.modelsettings[modelfield.field];
			
			draw_search_input(modelfield, fieldsetting);
		}%>
	</fieldset>
	<hr/>
	<footer class="form-actions form-group">
		<!--<span href="#<%= serviceconfig.name %>" class="btn btn btn-default back">
			&laquo; <%%= getMessage("go-back") %>
		</span>&nbsp;&nbsp;-->
		<button type="button" name="submit" class="save btn btn-primary btn-s">
			<i class='glyphicon glyphicon-search'></i> <%%= getMessage("search") %>
		</button>
		<a class="export btn btn-primary btn-s" href="<%= serviceconfig.apiurl %>/export" download="<%= serviceconfig.name %>-search.json">
			<i class='glyphicon glyphicon-download'></i> <%%= getMessage("export") %>
		</a>
		<button type="reset" class="btn btn-default  btn-s clear">
			<i class='glyphicon glyphicon-repeat'></i> <%%= getMessage("clear") %>
		</button>
	</footer>
</form>
<hr/>

<div id ="<%= serviceconfig.name %>_searh-results" class="search_results"></div>