<!DOCTYPE html>
<html>
	<head>
	    <base href="<%= webappuri %>/">
	    
	    <title><%= title %><%= typeof description != "undefined" ? " / " + description : "" %></title>
	    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1.0,user-scalable=0">
	
	    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
	   	<%- include(metatagpage) %>
	   
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="stylesheet" type="text/css" href="app.css" />
		<style>
			.ui-header .ui-title.logo, .ui-footer .ui-title.logo {
				<%if(typeof serverconfig != "undefined" && serverconfig.logo && serverconfig.logo.length > 0){%>
  				background:url('data:<%= serverconfig.logo[0].type %>;base64,<%= serverconfig.logo[0].content %>')
  				<%}else{%>
  				background:url('/logo.png')
  				<%}%>
					no-repeat
		  	} 
    	</style>
	</head>
	<body>
		<div data-role="page" id="mainpage" class="ui-page ui-responsive-panel">
			<div data-role="header" data-position="fixed" data-theme="<%= themeconfig.preference && themeconfig.preference.colorskin || 'b' %>" data-content-theme="a" data-fullscreen="false">
		        <a id="nav-panellink" data-inline="true" href="#nav-panel" data-icon="bars" data-iconpos="notext">Menu</a>
				<h2 class="logo"><%= title %></h2>
				<a data-iconpos="notext" data-inline="true" data-direction="reverse" href="#back" data-rel="back" data-iconpos="notext" data-icon="back">Back</a>
		    </div>
		    <!--
			<div data-role="header" data-position="fixed" data-fullscreen="true">
	        	<a  data-direction='reverse' href='#'  data-icon="home">Home</a>
		        <h2 class="logo"></h2>
	    	</div>-->
		    <div data-role="content">
		        <div class="app-splash"></div>
		    </div>
		    <div class="ui-state-persist ui-btn-active" data-role="footer" data-theme="<%= themeconfig.preference && themeconfig.preference.colorskin || 'b' %>" data-content-theme="a" data-position="fixed" data-fullscreen="false">
				<h3>
		            <%if(typeof pluginsetting == 'object' && pluginsetting.id){%><%= pluginsetting.title %>@v<%= pluginsetting.version %> / <%}%>
					<%if(themeconfig){%><%= themeconfig.title %>@v<%= themeconfig.version %><%}%>
					<%if(pluginsetting.webappsetting 
		            	&& typeof pluginsetting.webappsetting.footerconfig === 'object' 
		            	&& pluginsetting.webappsetting.footerconfig && pluginsetting.webappsetting.footerconfig.copyright){%>
						-  &copy; <a href='<%= pluginsetting.webappsetting.footerconfig.copyright.website %>' target='_blank'><%= pluginsetting.webappsetting.footerconfig.copyright.company %> <%= pluginsetting.webappsetting.footerconfig.copyright.info %></a>
					<%}%><br/>'<b><%= curtime %></b>'
		        </h3>
		    </div>
		</div>
		<script type="text/template" id="error_popup_template">
		<%- include templates/error_popup.html.ejs %>
		</script>
		<script type="text/template" id="page_template">
		<%- include templates/page.html.ejs %>
		</script>
		<script type="text/template" id="panel_template">
		<%- include templates/panel.html.ejs %>
		</script>
		<script type="text/template" id="popup_template">
		<%- include templates/popup.html.ejs %>
		</script>
		<script data-main="js/main.js" src="/cdn/lib/require.min.js"></script>
	</body>
</html>